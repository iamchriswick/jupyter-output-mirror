{
  "name": "jupyter-output-mirror",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  // ===== CONTAINER FEATURES =====
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": true,
      "version": "latest"
    }
  },

  // ===== CONTAINER CONFIGURATION =====
  "postCreateCommand": "bash .devcontainer/setup-shell.sh && npm ci && npm run compile",
  "forwardPorts": [3000, 5173, 8080],
  "portsAttributes": {
    "3000": {
      "label": "Vue Dev Server",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "HTTP Server",
      "onAutoForward": "notify"
    }
  },

  // ===== MOUNT & VOLUMES =====
  "mounts": [
    "source=jupyter-output-mirror-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume",
    "source=jupyter-output-mirror-guide-node_modules,target=${containerWorkspaceFolder}/src/guide/node_modules,type=volume"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "christian-kohler.npm-intellisense",
        "codezombiech.gitignore",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "editorconfig.editorconfig",
        "esbenp.prettier-vscode",
        "github.copilot",
        "github.copilot-chat",
        "github.vscode-pull-request-github",
        "howardzuo.vscode-npm-dependency",
        "humao.rest-client",
        "idered.npm",
        "kennylong.kubernetes-yaml-formatter",
        "mechatroner.rainbow-csv",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.vscode-python-envs",
        "ms-toolsai.datawrangler",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "ms-vscode.vscode-websearchforcopilot",
        "newbpydev.mcp-diagnostics-extension",
        "orta.vscode-jest",
        "redhat.vscode-yaml",
        "thang-nm.flow-icons",
        "upstash.context7-mcp",
        "vue.volar"
      ],
      "settings": {
        // ===== PROJECT THEME & BRANDING =====
        "workbench.colorTheme": "SynthWave '84",
        "workbench.iconTheme": "flow-dim",

        // ===== PROJECT-SPECIFIC FORMATTING =====
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,

        // ===== PYTHON CONFIGURATION (ms-python.python) =====
        "python.defaultInterpreterPath": "/opt/conda",
        "python-envs.defaultEnvManager": "ms-python.python:conda",
        "python-envs.defaultPackageManager": "ms-python.python:conda",

        // ===== JUPYTER CONFIGURATION (ms-toolsai.jupyter) =====
        "jupyter.excludeUserSitePackages": true,
        "jupyter.themeMatplotlibPlots": true,
        "jupyter.kernels.excludePythonEnvironments": [
          "/bin/python2",
          "/usr/bin/python2",
          "/usr/local/python/current/bin/python3",
          "/usr/local/python/current/bin/python",
          "/usr/bin/python3",
          "/bin/python3"
        ],
        "notebook.defaultFormatter": "charliermarsh.ruff",
        "notebook.formatOnSave.enabled": true,
        "notebook.codeActionsOnSave": {
          "notebook.source.fixAll": "explicit",
          "notebook.source.organizeImports": "explicit"
        },

        // ===== RUFF LINTER/FORMATTER (charliermarsh.ruff) =====
        "ruff.enable": true,
        "ruff.configurationPreference": "filesystemFirst",

        // ===== ESLINT (dbaeumer.vscode-eslint) =====
        "eslint.enable": true,
        "eslint.validate": [
          "javascript",
          "javascriptreact",
          "typescript",
          "typescriptreact",
          "vue"
        ],

        // ===== YAML (redhat.vscode-yaml) =====
        "yaml.validate": true,
        "redhat.telemetry.enabled": false,

        // ===== LANGUAGE-SPECIFIC FORMATTERS =====
        "[python]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          },
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "[markdown]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[jsonc]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[yaml]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "redhat.vscode-yaml"
        },
        "[vue]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
          }
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit",
            "source.organizeImports": "explicit"
          }
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit",
            "source.organizeImports": "explicit"
          }
        }
      }
    }
  }
}

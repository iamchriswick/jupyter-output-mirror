{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (isolated DevHost)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--user-data-dir=${workspaceFolder}/.vscode-devhost/user-data"
      ],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "npm: compile",
      "env": { "NODE_NO_WARNINGS": "1" }
    }
  ]
}
